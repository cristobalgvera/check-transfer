{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@check/client/add-recipient": ["libs/client/add-recipient/src/index.ts"],
      "@check/client/auth": ["libs/client/auth/src/index.ts"],
      "@check/client/material": ["libs/client/material/src/index.ts"],
      "@check/client/shared-services": [
        "libs/client/shared-services/src/index.ts"
      ],
      "@check/client/shared-ui": ["libs/client/shared-ui/src/index.ts"],
      "@check/client/transfer-history": [
        "libs/client/transfer-history/src/index.ts"
      ],
      "@check/client/transfer-money": [
        "libs/client/transfer-money/src/index.ts"
      ],
      "@check/server/account-type": ["libs/server/account-type/src/index.ts"],
      "@check/server/auth": ["libs/server/auth/src/index.ts"],
      "@check/server/bank": ["libs/server/bank/src/index.ts"],
      "@check/server/recipient": ["libs/server/recipient/src/index.ts"],
      "@check/server/shared-dtos": ["libs/server/shared-dtos/src/index.ts"],
      "@check/server/shared-schemas": [
        "libs/server/shared-schemas/src/index.ts"
      ],
      "@check/server/transfer": ["libs/server/transfer/src/index.ts"],
      "@check/shared/models": ["libs/shared/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
